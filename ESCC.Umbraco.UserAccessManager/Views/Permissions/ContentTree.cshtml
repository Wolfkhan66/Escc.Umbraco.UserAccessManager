@using ESCC.Umbraco.UserAccessManager.Utility
@model ESCC.Umbraco.UserAccessManager.ViewModel.ContentTreeViewModel

@Html.AntiForgeryToken()
<div class="row">
    <div class="col-sm-12">
        <div class="btn-group">
            <!-- Button trigger modal -->
            <button class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                Copy user permissions
            </button>

            @*Html.ActionLink("Sync user permissions", "CheckPermissionsForUser", "Permissions", new { id = @Model.UserId }, new { @class = "btn btn-info", @role = "button", title = "Synchronise permissions with website" })*@

            @*@(Model.isEditor
            ? Html.ActionLink("Delete editor", "ToggleEditor", "Permissions", new {Model.FullName, Model.UserId, Model.isEditor }, new { @class = "btn btn-danger", @role = "button" })
            : Html.ActionLink("Set editor", "ToggleEditor", "Permissions", new {Model.FullName, Model.UserId, Model.isEditor }, new { @class = "btn btn-primary", @role = "button" }))*@
        </div>        
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Copy Permissions</h4>
            </div>
            <div class="modal-body" id="lesspadding">
                <p>Find the user you want to copy permissions from</p>
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-btn">
                            <button type="button" id="searchinput" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Email<span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li id="menuitemuser"><a>Username</a></li>
                                <li id="menuitememail"><a>Email Address</a></li>
                            </ul>
                        </div>
                        <input type="email" class="form-control" id="searchterm" name="emailAddress" placeholder="Email Address" />
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="button" id="finduser">Find User</button>
                        </span>
                    </div>
                </div>
                <div id="result">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="myModalClose">Close</button>
                <button type="button" class="btn btn-success" id="copyPerms" disabled="disabled">Copy</button>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div id="tree" class="col-sm-12">
    </div>
</div>

<p class="hidden" id="userId">@Model.UserId</p>
    <p class="hidden" id="apppath">@Functions.GetAppPath(Request.ApplicationPath)</p>
