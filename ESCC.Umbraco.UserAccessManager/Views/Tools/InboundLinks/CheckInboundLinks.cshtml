    <thead>
        <tr>
            <th colspan="3">External Links</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.InboundLinksExternal)
        {
            <tr>
                <td class="col-md-3">
                    @item.PageName
                </td>
