                    <a class="ui-button" href="@editurl@item.PageId" target="_blank">edit page</a>
                </td>
                <td class="col-md-2">
                    <a class="ui-button" href="@viewurl@item.PageUrl" target="_blank">view page</a>
                </td>
            </tr>
        }
    </tbody>
</table>
