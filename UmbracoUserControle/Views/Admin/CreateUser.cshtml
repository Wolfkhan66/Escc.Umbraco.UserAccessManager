@model UmbracoUserControl.Models.UmbracoUserModel
@{
    ViewBag.Title = "Create New User";
}

<h2>Create new user</h2>

<p class="highlight">@TempData["Message"]</p>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("CreateUser", "Admin", FormMethod.Post, new { @class = "form-horizontal", @role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.Label("userName", "Logon ID", new {@class="col-md-3 control-label"})
                <div class="col-md-4">
                    @Html.TextBox("userName", "", new {@class = "form-control", @id = "userName", @placeholder = "Logon ID"})
                </div>
            </div>
            <div class="form-group">
                @Html.Label("fullName", "Full Name", new { @class = "col-md-3 control-label" })
                <div class="col-md-4">
                    @Html.TextBox("fullName", "", new { @class="form-control", @id="fullName", @placeholder="Full Name"})
                </div>
            </div>
            <div class="form-group">
                @Html.Label("emailAddress", "Email Address", new { @class = "col-md-3 control-label" })
                <div class="col-md-4">
                    @Html.TextBox("emailAddress", "", new { @class = "form-control", @id = "emailAddress", @placeholder = "Email Address" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-4">
                    <button class="btn btn-primary" type="submit">Go!</button>
                </div>
            </div>
        }
    </div>
</div>