@{
    ViewBag.Title = "Tools";
}

<div class="row">
    <div class="col-md-6">
        <p>@TempData["Message"]</p>
        <div class="input-group">
            <span class="input-group-btn">
                <button class="btn btn-primary" type="button" id="checkpage">Go!</button>
            </span>
            <input type="url" class="form-control" id="url" name="url" placeholder="Page Url" />
        </div>
        <div class="col-md-8">
            <div id="editors"></div>
        </div>
        <p class="hidden" id="apppath">@Request.ApplicationPath</p>
    </div>
</div>